<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Layar 1 untuk menampilkan catatan -->
        <TextView
            android:id="@+id/tvNoteDisplay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="Catatan Anda akan muncul di sini"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="16dp" />

        <!-- Garis pemisah -->
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/black"
            android:layout_marginVertical="8dp" />

        <!-- Layar 2 untuk mengetik catatan -->

        <!-- Tombol Save -->
        <EditText
            android:id="@+id/etNoteInput"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.3"
            android:background="@android:color/white"
            android:hint="Tulis catatan di sini"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />

        <!-- Tombol Delete Last -->
        <Button
            android:id="@+id/btnDeleteLast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Last" />

        <!-- Tombol Clear All -->
        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
